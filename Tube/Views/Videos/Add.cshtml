@using Tube.Web.InputModels.Video
@model CreateVideoInputModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/reset-css.css" />
<link rel="stylesheet" href="~/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/style.css" />
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<h3 class="text-center text-primary pt-5">Add Video</h3>
<hr class="w-50 hr-2" />
<form class="mx-auto w-50" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name" class="text-info">Name:</label>
        <input type="text"
               class="form-control"
               id="name"
               placeholder="Name..."
               asp-for="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Category" class="text-info">Category:</label>
        <select class="form-control text-primary" id="category" asp-for="Category">
            <option selected disabled>--- Select Video Category ---</option>
            <option>Music</option>
            <option>News</option>
            <option>Sport</option>
            <option>TV</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="VideoUrl" class="text-info">Video:</label>
        <input type="file"
               class="form-control"
               id="video"
               placeholder="Video..."
               asp-for="VideoUrl">
        <span asp-validation-for="VideoUrl" class="text-danger"></span>
    </div>
    <div class="button-holder d-flex justify-content-center">
        <button type="submit" class="btn btn-info btn-md align-items-md text-white">Add</button>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
