@using Tube.Web.ViewModels.Channel
@model List<SubscribersViewModel>
@{
    ViewData["Title"] = "Subscriptions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/reset-css.css" />
<link rel="stylesheet" href="~/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/style.css" />
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<h3 class="text-center text-primary pt-3">Subscriptions</h3>
<hr class="w-50 hr-2" />
@if (Model.Count != 0)
{
    @foreach (var userChannel in Model)
    { 
        <div class="row justify-content-around text-center pt-3">
            <div class="col-4 pt-1">
                <img width="100" height="100" class="rounded-circle rounded mx-auto d-block pt-1" src="@userChannel.Channel.ChannelPicUrl" />
            </div>
            <div class="col-4 pt-1">
                <a asp-controller="Channels" asp-action="Other" asp-route-id="@userChannel.ChannelId" class="btn btn-outline-danger btn-lg text-center text-right">View Channel</a>
            </div>
            <div class="col-4 pt-1">
                <a asp-controller="Users" asp-action="Remove" asp-route-id="@userChannel.ChannelId" class="btn btn-outline-danger btn-lg text-center text-right">Remove</a>
            </div>
        </div>
    }
}