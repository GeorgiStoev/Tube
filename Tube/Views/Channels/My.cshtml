@using Tube.Web.ViewModels.Channel
@model ChannelViewModel
@{
    ViewData["Title"] = "MyChannel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/reset-css.css" />
<link rel="stylesheet" href="~/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/style.css" />
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<h3 class="text-center text-primary pt-3">@Model.Name</h3>
<div class="center">
    <img width="215" height="200" class="rounded-circle rounded mx-auto d-block" src="@Model.ChannelPicUrl" />
</div>
<h4 class="text-center text-primary pt-3">Description: @Model.Description</h4>

<div class="row justify-content-around text-center pt-5">
    <div class="col-4 pt-1">
        <a asp-controller="Channels" asp-action="Videos" asp-route-id="@Model.Id" class="btn btn-outline-primary text-left">Videos</a>
    </div>
    <div class="col-4 pt-1"> 
        <a asp-controller="Videos" asp-action="Add" class="btn btn-primary btn-lg text-center">Add Video</a>
    </div>
    <div class="col-4 pt-1">
        <a asp-controller="Channels" asp-action="Subscribers" asp-route-id="@Model.Id" class="btn btn-outline-danger text-right">Subscribers</a>
    </div>
</div>