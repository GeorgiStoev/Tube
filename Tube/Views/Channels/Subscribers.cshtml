@using Tube.Web.ViewModels.Channel
@model List<SubscribersViewModel>
@{
    ViewData["Title"] = "Subscribers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/reset-css.css" />
<link rel="stylesheet" href="~/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/style.css" />
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<h3 class="text-center text-primary pt-3">Subscribers</h3>
<hr class="w-50 hr-2" />
@if (Model.Count == 0)
{
    <h4 class="text-center text-primary pt-3">The Channel has zero subscribers!</h4>
}
else
{
    @foreach (var userChannel in Model)
     {
        if (userChannel.Channel == null) 
        {
            <div class="row justify-content-around text-center pt-3">
                <div class="col-4 pt-1 align-content-lg-start">
                    <img width="65" height="65" class="rounded-circle rounded mx-auto d-block" src="https://icon-library.net/images/default-user-icon/default-user-icon-8.jpg" />
                </div>
                <div class="col-4 pt-1">
                    <h2 class="text-center text-primary font-weight-light">@userChannel.TubeUser.FirstName @userChannel.TubeUser.LastName</h2>
                </div>
            </div>
        }
        else
        {
            <div class="row justify-content-around text-center pt-3">
                <div class="col-4 pt-1 align-content-lg-end">
                    <img width="65" height="65" class="rounded-circle rounded mx-auto d-block" src="@userChannel.Channel.ChannelPicUrl" />
                </div>
                <div class="col-4 pt-1">
                    <h2 class="text-center text-primary font-weight-light">@userChannel.TubeUser.FirstName @userChannel.TubeUser.LastName</h2>
                </div>
                <div class="col-4 pt-1">
                    <a asp-controller="Channels" asp-action="Other" asp-route-id="@userChannel.TubeUser.Channel.Id" class="btn btn-outline-danger btn-lg text-center text-right">View Channel</a>
                </div>
            </div>
        }
        <hr class="w-100 hr-2" />
     }
}