@using Tube.Web.ViewModels.History
@model List<HistoryViewModel>
@{
    ViewData["Title"] = "Videos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/reset-css.css" />
<link rel="stylesheet" href="~/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/style.css" />
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<h3 class="text-center text-primary pt-3">History</h3>
<hr class="w-50 hr-2" />
@if (Model.Count != 0)
{
    <p align="center">
        <a asp-controller="History" asp-action="DeleteAllHistory" class="btn btn-danger btn-lg text-center text-right">Delete History</a>
    </p>
    @foreach (var history in Model)
    {
        var id = history.VideoId;
        <div class="text-center pt-3">
            <video width="320" height="200">
                  <source src="@history.VideoUrl#t=3.0" type="video/mp4" />
           </video>
            <p class="align-center">
                <h6 class="text-center text-primary pt-1">@history.VideoName</h6>
            <p class="text-center font-weight-light"><small><strong>Watched on @history.Date</strong></small></p>
            <a asp-controller="Videos" asp-action="Watch" asp-route-id="@id" class="btn btn-outline-danger text-left">Watch Again</a>
        </div>
    }
}