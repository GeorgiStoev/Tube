@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<link rel="stylesheet" href="~/css/reset-css.css" />
<link rel="stylesheet" href="~/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/style.css" />
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<h3 class="text-center text-primary pt-5">Register</h3>
<hr class="w-50 hr-2" />
<form class="mx-auto w-50" method="post">
    <div class="form-group">
        <label asp-for="Input.FirstName" class="text-info">First Name:</label>
        <input type="text"
               class="form-control"
               id="firstName"
               placeholder="FirstName..."
               asp-for="Input.FirstName">
        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.FirstName" class="text-info">Last Name:</label>
        <input type="text"
               class="form-control"
               id="lastName"
               placeholder="lastName..."
               asp-for="Input.LastName">
        <span asp-validation-for="Input.LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.Password" class="text-info">Password</label>
        <input type="password"
               class="form-control"
               id="password"
               placeholder="Password..."
               asp-for="Input.Password">
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.ConfirmPassword" class="text-info">Confirm Password</label>
        <input type="password"
               class="form-control"
               id="confirmPassword"
               placeholder="Confirm Password..."
               asp-for="Input.ConfirmPassword">
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.Email" class="text-info">Email</label>
        <input type="email"
               class="form-control"
               id="email"
               placeholder="Email..."
               asp-for="Input.Email">
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <div class="button-holder d-flex justify-content-center">
        <button type="submit" class="btn btn-info btn-md align-items-md text-white">Register</button>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
